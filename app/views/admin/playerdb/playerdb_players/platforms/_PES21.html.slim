.row.border-dashed.border.border-secondary style="padding: 1.5rem; margin: 1.5rem;"
  .col-lg-4.col-sm-12
    h6.d-flex.align-items-center
      i.ri-star-s-line.me-2.text-danger
      = t('playerdb.players.playingStyle')
    p
      .badge.badge-soft-light.badge-border.me-1
        = t("playerdb.players.styles.#{(@defPlayer.details["attrs"]["playingStyle"]).delete(" ")}") if @defPlayer.details["attrs"]["playingStyle"]

  .col-lg-4.col-sm-12
    h6.d-flex.align-items-center
      i.ri-star-s-line.me-2.text-danger
      = t('playerdb.players.skill')
    p
      - if @defPlayer.details["skills"]
        - @defPlayer.details["skills"].each do |skill|
          - if skill != "-"
            .badge.badge-soft-light.badge-border.me-1
              = t("playerdb.players.skills.#{skill.delete(" ")}")

  .col-lg-4.col-sm-12
    h6.d-flex.align-items-center
      i.ri-star-s-line.me-2.text-danger
      = t('playerdb.players.comStyles')
    p
        - if @defPlayer.details["com_styles"]
            - @defPlayer.details["com_styles"].each do |cStyle|
                - if cStyle != "-"
                    .badge.badge-soft-light.badge-border.me-1
                        = t("playerdb.players.skills.#{cStyle.delete(" ")}")