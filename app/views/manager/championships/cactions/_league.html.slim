- define_clubs_disabled = championship.club_championships.size == 0 && @season.status == 1 && @season.preferences['saction_clubs_choosing'] == 2 ? "btn btn-primary btn-sm btn-border" : "btn btn-secondary btn-sm btn-border disabled text-decoration-line-through"
= link_to manager_championship_define_clubs_path(championship.hashid), id: "define_clubs", class: "btn btn-block btn-sm #{define_clubs_disabled} text-left", "data-turbo-frame": "modal" do
  span = t('.choose_club')

- start_championship_disabled = (championship.status == 0 && championship.club_championships.size >= 4) ? "btn-primary" : "btn-secondary disabled text-decoration-line-through"
= link_to "javascript:;", class: "btn btn-primary btn-sm btn-border #{start_championship_disabled}", data: { controller: "confirm", "confirm-title-value": t('.start_championship_question'), "confirm-text-value": t('.start_championship_text'), "confirm-link-value": manager_championship_start_path(championship.hashid), "confirm-icon-value": "question", "confirm-action-value": "POST", action: "click->confirm#dialog" } do
  span = t('.start_championship')

- start_league_round_disabled = championship.status == 1 ? "btn-primary" : "btn-secondary disabled text-decoration-line-through"
= link_to "javascript:;", class: "btn btn-primary btn-sm btn-border #{start_league_round_disabled}", data: { controller: "confirm", "confirm-title-value": t('.start_league_round_question'), "confirm-text-value": t('.start_league_round_text'), "confirm-link-value": manager_championship_start_league_round_path(championship.hashid), "confirm-icon-value": "question", "confirm-action-value": "POST", action: "click->confirm#dialog" } do
  span = t('.start_league_round')

- if championship.preferences["league_two_rounds"] == "on"
  - start_league_secondround_disabled = championship.status == 2 ? "btn-primary" : "btn-secondary disabled text-decoration-line-through"
  = link_to manager_championship_start_second_round_path(championship.hashid), class: "btn btn-block btn-sm btn-border #{start_league_secondround_disabled}", data: { "turbo-frame": 'modal' }
    span = t('.start_league_secondround')

