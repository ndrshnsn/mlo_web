- suspendedPlayers = players_suspended(game.championship.hashid, game.hashid)
- if suspendedPlayers[:home_ycard].count > 0 || suspendedPlayers[:home_rcard].count > 0 || suspendedPlayers[:visitor_ycard].count > 0 || suspendedPlayers[:visitor_rcard].count > 0
  .badge.d-block.badge-danger.mt-1.mb-50 JOGADORES SUSPENSOS
  div.suspended-players
    ul.list-group.list-group-flush[style="font-size: smaller;"]
      - suspendedPlayers[:home_ycard].each do |hycard|
        - sPlayer = Player.joins(:player_seasons).where(player_seasons: { id: hycard }).first
        li.list-group-item.d-flex.justify-content-between.align-items-center[style="padding: 0.25rem 0rem!important;"]
          span
            .media.mb-25
              .media-aside.align-self-center.mr-25
                span.b-avatar.badge-light-info.rounded-circle[style='width: 32px; height: 32px;']
