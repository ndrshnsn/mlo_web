                    img[src="#{session[:pdbprefix]}/players/#{sPlayer.platform}/#{sPlayer.platformid}.png" class="avatar avatar-sm mr-25" style="width: 28px; height: 28px;"]
              .media-body.align-self-center
                span.d-block = sPlayer.name
          span
            i.bx.bx-square[style="color: yellow;"]
